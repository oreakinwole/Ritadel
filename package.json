  "dependencies": {
    "bcrypt": "5.0.0",
    "compression": "^1.7.4",
    "concurrently": "^4.1.1",
    "config": "^3.1.0",
    "dotenv": "^8.0.0",
    "express": "^4.16.4",
    "helmet": "^3.18.0",
    "joi": "^13.1.0",
